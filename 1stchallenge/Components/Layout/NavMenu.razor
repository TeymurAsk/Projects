</div>
<div class="square-for-circle-saved">
    <div class="circle-saved" @onclick='(()=>{navman.NavigateTo("saved");})'>
        <i class="fa-regular fa-heart circle-icon-saved" style="font-size:40px"></i>
    </div>
    <p class="font-for-sidebar" style="color:#E7E7E8">Saved</p>
</div>
<div class="square-for-circle-settings">
    <div class="circle-settings" @onclick='(()=>{navman.NavigateTo("settings");})'>
        <i class="fa-solid fa-gear circle-icon-settings" style="font-size:40px"></i>
    </div>
    <p class="font-for-sidebar" style="color:#E7E7E8">Settings</p>
</div>

