    <img class="D-image" src="D.png" />
</div>

<div class="square-for-circle-message">
    <div class="circle-messages" @onclick='(()=>{navman.NavigateTo("messages");})'>
        <i class="fa-regular fa-comment circle-icon-messages" style="font-size:40px"></i>
